@import "_variables.pcss";
@import "_fonts.pcss";
@import "_animations.pcss";
@import "_base.pcss";
@import "tailwindcss";


h1, h2, h3, h4, h5, h6, a, p {
  margin-top: 0;
  color: $text-primary-color;
}

a {
  font-weight: 400;
  color: $text-secondary-color;
  text-decoration: inherit;
}

a:hover {
  color: $text-secondary-shadow-color;
}

h1 {
  font-size: 3.2em;
  line-height: 1.1;
}

#app {
  width: 100%;
  height: 100%;
  padding: 10px;
  max-width: 1280px;
  margin: 0 auto;
  text-align: center;
  
  align-content: space-evenly;
}

.main {
  width: 100%;
  display: inline-flex;
  gap: $block-distance;
  
  position: relative;
  
  justify-content: space-evenly;
}

.column {
  display: flex;
  gap: $block-distance;
  width: 100%;
  flex-direction: column;
  align-items: stretch;
  justify-items: stretch;
  align-content: space-evenly;
}

.card {
  height: 100%;
  padding: 10px;
  background: white;
  border-radius: $border-radius;
}

.technologies {
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  align-content: space-evenly;
  justify-items: center;
  justify-content: space-evenly;
  gap: 10px;
}

@media (max-width: 750px) and (max-height: 940px) {
  .main {
    height: 100%;
    display: flex;
    flex-direction: column;
    gap: 15px;
    justify-content: space-evenly;
  }
}

.table-info {
  display: flex;
  align-items: center;
  justify-content: center;
  align-content: space-evenly;
}

.table-header {
  margin: 0;
}

.table-ceil:nth-child(odd) {
  width: 30%;
  text-align: start;
}

.socials {
  width: 100%;
  display: flex;
  justify-content: space-evenly;
  align-content: space-evenly;
  a {
    align-self: center;
  }
}

.social {
  width: 75px;
  height: 75px;
  
  -webkit-user-drag: none;
  user-select: none;
}

.repo {
  width: 100%;
}

